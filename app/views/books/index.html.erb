<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |element|  %>
    <tr>
    <td><%= element.title %></td>
    <td><%= element.body %></td>
    <td><%= link_to "Show",  "books/#{element.id}" %></td>
    <td><%= link_to "Edit",  "books/#{element.id}/edit" %></td>
    <td><%= link_to "Destroy",  "books/destroy/#{element.id}",method: :delete %></td>
    <% end %>
    </tr>
  </tbody>
</table>
<h2>New Book</h2>
<%= form_with model: @list, url: '/books', method: :post do |f| %>
<div class = "field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class = "field">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
  <%= f.submit 'Create Book' %>
<% end %>
